{{#if addNewMovie}}
  <h3>New Movie:</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="date">Released:</label>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="rating">Rated:</label>
        {{input value=rating id="rating"}}
      </div>

      <div class="form-group">
        <label for="genre">Genre:</label>
        {{input value=genre id="genre"}}
      </div>

      <button type="button" {{action 'saveMovie'}}>Submit</button>
    </form>
  </div>
  {{else}}
    <button {{action 'movieFormShow'}}>Add Movie</button>
  {{/if}}
