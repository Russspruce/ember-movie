<h1>{{movie.Title}}</h1>
<div class="row">
  <div class="col-md-6">
    <hr>
    <img src = {{movie.poster}}>
    <hr>
    <h2>Released: {{movie.date}}</h2>
    <h2>Genre: {{movie.genre}}</h2>
    <h2>Rated: {{movie.rating}}</h2>
  </div>
  <h3>Average: {{averageScore}}</h3>
  <div class="col-md-6">
    {{#each movie.reviews as |review|}}
    {{review-tile review=review updateReview="updateReview"}}
    {{/each}}
    {{new-review saveReview="saveReview" movie=movie}}
  </div>
</div>
